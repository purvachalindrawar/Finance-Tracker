# Root env for both frontend and backend (copy to .env)
# Database (Neon)
DATABASE_URL=postgresql://USER:PASSWORD@HOST/DBNAME?sslmode=require

# Auth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace_with_strong_random_value
JWT_SECRET=replace_with_strong_random_value

# App
NEXT_PUBLIC_API_URL=http://localhost:4000
PORT=4000

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Web Push (optional)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# OCR/Tesseract (optional)
TESSERACT_LANG=eng

# Providers (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
